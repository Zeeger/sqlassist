<Window x:Class="SQLAssist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vv="clr-namespace:SQLAssist.VerticalViewer"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		
		<TextBox Grid.Row="0" Grid.Column="0" Name="txtInput" AcceptsReturn="True" AcceptsTab="True" />
		
		<vv:VerticalViewer x:Name="verticalViewer" Grid.Column="1" Grid.Row="0"/>
	</Grid>
</Window>
